<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textSize="70dp"
        android:background="#3F51B5"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/ca"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:text="CA"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F44336"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/eight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/nine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#009688"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="60dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="0"
                android:textColor="#000000"
                android:textSize="60dp"
                android:gravity="center"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>